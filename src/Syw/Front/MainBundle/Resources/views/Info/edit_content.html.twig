{% trans_default_domain "syw_front_main_info_edit" %}

{{ include('SywFrontMainBundle:Info:add_city_modal.html.twig') }}
<div class="col-sm-12">
    <form action="{{ url('syw_front_main_info_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">

        <div class="form-group">
            {{ form_row(form.firstname) }}
        </div>
        <div class="form-group">
            {{ form_row(form.lastname) }}
        </div>
        <div class="form-group">
            <div class="form-group">{{ form_label(form.city) }}
                <div class="col-sm-9">
                    <div class="col-sm-10 profile_form_city_field">
                        {{ form_widget(form.city, { 'attr': {'placeholder': 'Search for your city by typing the name...'|trans} }) }}
                    </div>
                    <div class="col-sm-2 profile_form_city_button">
                        <div class="col-sm-12">
                            <span id="add_city_button" class="button-lite">+</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">{{ form_label(form.country) }}
                <div class="col-sm-9">
                    {{ form_widget(form.country, { 'attr': {'placeholder': 'Search for your country by typing the name...'|trans} }) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            {{ form_row(form.birthday) }}
        </div>
        <div class="form-group">
            {{ form_row(form.birthplace) }}
        </div>
        <div class="form-group">
            {{ form_row(form.sincewhen) }}
        </div>
        <div class="form-group">
            {{ form_row(form.homepage) }}
        </div>
        <div class="form-group">
            {{ form_row(form.icq) }}
        </div>
        <div class="form-group">
            {{ form_row(form.skype) }}
        </div>
        <div class="form-group">
            {{ form_row(form.jabber) }}
        </div>
        <div class="form-group">
            {{ form_row(form.msn) }}
        </div>
        <div class="form-group">
            {{ form_row(form.facebook) }}
        </div>
        <div class="form-group">
            {{ form_row(form.google) }}
        </div>
        <div class="form-group">
            {{ form_row(form.twitter) }}
        </div>
        <div class="form-group">
            {{ form_row(form.identica) }}
        </div>
        <div class="form-group">
            {{ form_row(form.interests) }}
        </div>
        <div class="form-group">
            {{ form_row(form.hobbies) }}
        </div>
        <div class="form-group">
            {{ form_rest(form) }}
        </div>

    </form>
</div>
